<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:id="@+id/et_Data"
        android:layout_x="89dp"
        android:layout_y="87dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:id="@+id/tv_Data"
        android:layout_x="15dp"
        android:layout_y="86dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nº Taula"
        android:id="@+id/tv_nTaula"
        android:layout_x="11dp"
        android:layout_y="208dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_nTaula"
        android:layout_x="99dp"
        android:layout_y="200dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="74dp"
        android:id="@+id/btn_AfegirProductes"
        android:layout_x="207dp"
        android:layout_y="237dp"
        android:onClick="afegirProductesComanda"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Productes"
        android:id="@+id/tv_Productes"
        android:layout_x="20dp"
        android:layout_y="269dp" />

    <ListView
        android:layout_width="334dp"
        android:layout_height="127dp"
        android:id="@+id/listView2"
        android:layout_x="13dp"
        android:layout_y="328dp" />

    <TextView
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:text="Preu Total: 65,4€"
        android:id="@+id/tv_PreuTotal"
        android:layout_x="18dp"
        android:layout_y="462dp" />

    <Button
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/btn_ConfirmarComanda"
        android:layout_x="13dp"
        android:layout_y="489dp"
        android:onClick="confirmarComanda"/>

    <Button
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btn_CancelarComanda"
        android:layout_x="182dp"
        android:layout_y="490dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_x="85dp"
        android:layout_y="69dp" />

</AbsoluteLayout>