<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:weightSum="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:id="@+id/tv_Data"
            android:layout_x="15dp"
            android:layout_y="86dp" />

        <EditText
            android:layout_width="158dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:id="@+id/et_Data"
            android:layout_x="89dp"
            android:layout_y="87dp" />

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_Calendari"
            android:src="@drawable/calendari_redimensionada"
            android:onClick="setDataComanda"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:id="@+id/tv_Hora"
            android:layout_x="15dp"
            android:layout_y="86dp" />

        <EditText
            android:layout_width="160dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:id="@+id/et_Hora"
            android:layout_x="89dp"
            android:layout_y="87dp" />


        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:src="@drawable/rellotge_redimensionada"
            android:onClick="setHoraComanda"
            android:id="@+id/btn_Hora"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nº Taula"
            android:id="@+id/tv_nTaula"
 />

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_nTaula" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(del 1 al 20)"
            android:id="@+id/tv_hintTaules"
            android:layout_marginLeft="10dp"
            android:textColor="#ffb9b9b9" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Productes"
            android:id="@+id/tv_Productes"
            android:layout_x="20dp"
            android:layout_y="269dp" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/btn_AfegirProductes"
            android:layout_marginLeft="190dp"
            android:onClick="afegirProductesComanda"/>
        </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:id="@+id/listView2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preu Total:"
            android:id="@+id/tv_PreuTotalComandaTitol"
            android:layout_x="18dp"
            android:layout_y="462dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="65.4€"
            android:id="@+id/tv_PreuTotalComanda"
            android:layout_x="18dp"
            android:layout_y="462dp" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">


        <ImageView
            android:layout_width="310px"
            android:layout_height="100px"
            android:id="@+id/btn_CancelarComanda"
            android:layout_x="182dp"
            android:layout_y="490dp"
            android:onClick="cancelarComanda"
            android:src="@drawable/cancelar"/>

        <ImageView
            android:layout_width="310px"
            android:layout_height="100px"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_ConfirmarComanda"
            android:layout_x="13dp"
            android:layout_y="489dp"
            android:onClick="confirmarComanda"
            android:src="@drawable/confirmar"/>


    </LinearLayout>

</LinearLayout>